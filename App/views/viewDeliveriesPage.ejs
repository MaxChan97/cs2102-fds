<!DOCTYPE html>
<html>
  <head>
		<!-- Page Title -->
    <title>Your deliveries</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
		
		<!-- CSS for Styling -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
		
		<!-- JavaScript for Interactivity -->
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
  </head>
  <body>
    <h1>Your deliveries</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Order time</th>
          <th scope="col">Restaurant name</th>
          <th scope="col">Restaurant address</th>
          <th scope="col">Customer address</th>
          <th scope="col">Time arrived at restaurant</th>
          <th scope="col">Time order collected</th>
          <th scope="col">Time order delivered</th>
          <th scope="col">Delivery fee</th>
          <th scope="col">Delivery rating (if any)</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<ordersData.length; i++) { %>
        <tr>
          <td><%= ordersData[i].timeplaced.toString().slice(0, 24)%></td>
          <td><%= ordersData[i].name%></td>
          <td><%= ordersData[i].raddress%></td>
          <td><%= ordersData[i].caddress%></td>
          <td><%= ordersData[i].timeriderarrivesrestaurant.toString().slice(0, 24)%></td>
          <td><%= ordersData[i].timeriderleavesrestaurant.toString().slice(0, 24)%></td>
          <td><%= ordersData[i].timeriderdelivered.toString().slice(0, 24)%></td>
          <td><%= ordersData[i].deliveryfee%></td>
          <td><%= ordersData[i].deliveryrating%></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
